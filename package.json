{
  "name": "ssr-react",
  "version": "1.0.0",
  "description": "A Server-Side Rendered React application with React, TypeScript and Express",
  "main": "build/server_bundle.js",
  "scripts": {
    "test": "jest",
    "start": "NODE_ENV=production node build/server_bundle.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "NODE_ENV=production webpack --config webpack.client.config.js",
    "build:server": "NODE_ENV=production webpack --config webpack.server.config.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "NODE_ENV=development webpack --config webpack.client.config.js --watch",
    "dev:server": "NODE_ENV=development webpack --config webpack.server.config.js --watch & nodemon build/server_bundle.js"
  },
  "author": "severalMountainsDev",
  "license": "ISC",
  "engines": {
    "node": "18.19.0",
    "npm": "10.2.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "2.0.1",
    "express": "4.18.2",
    "formik": "2.4.5",
    "node-sass": "^9.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-redux": "9.0.2",
    "react-router-dom": "6.20.1",
    "redux": "5.0.0",
    "sass-loader": "13.3.2",
    "yup": "1.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.23.5",
    "@babel/preset-env": "7.23.5",
    "@babel/preset-react": "7.23.3",
    "@babel/preset-typescript": "7.23.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.11",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "@types/react-helmet": "6.1.11",
    "babel-loader": "9.1.3",
    "concurrently": "8.2.2",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.8.1",
    "file-loader": "6.2.0",
    "identity-obj-proxy": "3.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "2.7.6",
    "nodemon": "3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-node-externals": "3.0.0",
    "write-file-webpack-plugin": "4.5.1"
  }
}
